{
	"name": "opus-ui-website",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"start": "concurrently --kill-others \"npm run dev\" \"nodemon node_modules/opus_packager/src/packager.js\"",
		"dev": "vite --port 3000",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"opusPackagerConfig": {
		"appDir": "app",
		"packagedDir": "public",
		"packagedFileName": "app"
	},
	"nodemonConfig": {
		"ignore": [],
		"watch": [
			"app"
		],
		"ext": "js,json,md",
		"ignoreRoot": [],
		"delay": 100
	},
	"dependencies": {
		"opus-ui": "0.0.85",
		"opus-ui-code-editor": "^0.4.3",
		"opus-ui-components": "^0.2.6",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"concurrently": "^8.2.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"opus_packager": "^3.7.3",
		"vite": "^5.0.8",
		"vite-plugin-dynamic-import": "^1.5.0"
	},
	"opusComponentLibraries": [
		"opus-ui-code-editor",
		"opus-ui-components"
	]
}
