{
	"name": "@intenda/opus-ui-website",
	"version": "1.3.0",
	"type": "module",
	"scripts": {
		"start": "concurrently --kill-others \"npm run dev -- --host\" \"nodemon node_modules/@intenda/opus-ui-packager/src/packager.js\"",
		"dev": "vite --port 3000",
		"build-json": "node node_modules/@intenda/opus-ui-packager/src/packager.js",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"opusPackagerConfig": {
		"appDir": "app",
		"packagedDir": "public",
		"packagedFileName": "app"
	},
	"keywords": [
		"opus-ui",
		"website",
		"cms",
		"opus"
	],
	"nodemonConfig": {
		"ignore": [],
		"watch": [
			"app"
		],
		"ext": "js,json,md",
		"ignoreRoot": [],
		"delay": 100
	},
	"dependencies": {
		"@intenda/opus-ui": ">=2.0.0 < 3.0.0",
		"@intenda/opus-ui-code-editor": ">=2.0.0 < 3.0.0",
		"@intenda/opus-ui-components": ">=2.0.0 < 3.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@intenda/opus-ui-packager": ">=1.0.0 < 2.0.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^9.1.2",
		"eslint": "^9.20.1",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"nodemon": "^3.1.9",
		"vite": "^6.1.1"
	},
	"opusComponentLibraries": [
		"opus-ui-code-editor",
		"opus-ui-components"
	],
	"publishConfig": {
		"access": "public"
	}
}