{
	"name": "@intenda/opus-ui-website",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"start": "concurrently --kill-others \"npm run dev -- --host\" \"nodemon node_modules/@intenda/opus-ui-packager/src/packager.js\"",
		"dev": "vite --port 3000",
		"build-json": "node node_modules/@intenda/opus-ui-packager/src/packager.js",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"opusPackagerConfig": {
		"appDir": "app",
		"packagedDir": "public",
		"packagedFileName": "app"
	},
	"keywords": [
		"opus-ui",
		"website",
		"cms",
		"opus"
	],
	"nodemonConfig": {
		"ignore": [],
		"watch": [
			"app"
		],
		"ext": "js,json,md",
		"ignoreRoot": [],
		"delay": 100
	},
	"dependencies": {
		"@intenda/opus-ui": "1.0.0",
		"@intenda/opus-ui-code-editor": "^1.0.0",
		"@intenda/opus-ui-components": "^1.0.0",
		"@intenda/opus-ui-svg": "^1.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@intenda/opus-ui-packager": "^1.0.0",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"concurrently": "^8.2.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"nodemon": "^3.1.0",
		"vite": "^5.0.8",
		"vite-plugin-dynamic-import": "^1.5.0"
	},
	"opusComponentLibraries": [
		"opus-ui-code-editor",
		"opus-ui-components"
	],
	"publishConfig": {
		"access": "public"
	}
}
