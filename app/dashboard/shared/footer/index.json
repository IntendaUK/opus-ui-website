{
    "acceptPrps": {
        "simple": {
            "type": "boolan",
            "desc": "When set to true, the footer will hae no background color or padding",
            "dft": false
        },
        "backgroundColor": {
            "type": "string",
            "morph": true,
            "morphVariable": "res",
            "morphActions": [
                {
                    "type": "setVariable",
                    "name": "res",
                    "value": "{{eval.%simple% ? 'transparent' : 'secondaryBackground'}}"
                }
            ]
        },
        "padding": {
            "type": "boolean",
            "morph": true,
            "morphVariable": "res",
            "morphActions": [
                {
                    "type": "setVariable",
                    "name": "res",
                    "value": "{{eval.!%simple%}}"
                }
            ]
        }
    },
    "type": "containerSimple",
    "prps": {
        "padding": "$padding$",
        "paddingSize": "mediumPadding padding",
        "backgroundColor": "%backgroundColor%",
        "marginTop": "mediumPadding",
        "dir": "horizontal",
        "crossAxisAlign": "center",
        "mainAxisAlign" :"space-between",
        "width": "100%",
        "height": "100px"
    },
    "wgts": [
        {
            "type": "containerSimple",
            "prps": {},
            "wgts": [
                {
                    "type": "image",
                    "prps": {
                        "value": "{theme.system.mdaLocation}/images/logo.svg",
                        "imageHeight": "24px",
                        "imageWidth": "auto",
                        "style": {
                            ".cpnImage": {
                                "@media only screen and (max-width: 700px)": {
                                    "display": "none"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "image",
                    "prps": {
                        "value": "{theme.system.mdaLocation}/images/logoSimple.svg",
                        "imageHeight": "24px",
                        "imageWidth": "auto",
                        "style": {
                            ".cpnImage": {
                                "@media only screen and (min-width: 700px)": {
                                    "display": "none"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "label",
                    "prps": {
                        "marginTop": "tinyPadding",
                        "cpt": "Â© 2024",
                        "fontSize": "14px",
                        "color": "secondaryText"
                    }
                }
            ]
        },
        {
            "type": "container",
            "prps": {
                "marginLeft": "auto",
                "canClick": true,
                "fireScript": {
                    "actions": [
                        {
                            "type": "openUrl",
                            "url": "http://discord.opus-ui.com"
                        }
                    ]
                }
            },
            "wgts": [
                {
                    "type": "image",
                    "prps": {
                        "value": "{theme.system.mdaLocation}/images/discord.svg",
                        "imageWidth": "24px",
                        "imageHeight": "24px"
                    }
                }
            ]
        },
        {
            "type": "container",
            "prps": {
                "marginLeft": "padding",
                "canClick": true,
                "fireScript": {
                    "actions": [
                        {
                            "type": "openUrl",
                            "url": "https://twitter.com/opus_ui"
                        }
                    ]
                }
            },
            "wgts": [
                {
                    "type": "image",
                    "prps": {
                        "value": "{theme.system.mdaLocation}/images/twitter.svg",
                        "imageWidth": "24px",
                        "imageHeight": "24px"
                    }
                }
            ]
        },
        {
            "type": "container",
            "prps": {
                "marginLeft": "padding",
                "canClick": true,
                "fireScript": {
                    "actions": [
                        {
                            "type": "openUrl",
                            "url": "https://github.com/IntendaUK/opus-ui"
                        }
                    ]
                }
            },
            "wgts": [
                {
                    "type": "image",
                    "prps": {
                        "value": "{theme.system.mdaLocation}/images/github.svg",
                        "imageWidth": "24px",
                        "imageHeight": "24px"
                    }
                }
            ]
        }
    ]
}