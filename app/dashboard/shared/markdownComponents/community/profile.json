{
    "acceptPrps": {
        "imageUrl": {
            "type": "string",
            "desc": "path to the teamMembers profileImage"
        },
        "name": {
            "type": "string",
            "desc": "Defines value for the name caption"
        },
        "jobTitle": {
            "type": "string",
            "desc": "Defines value for the itle's caption underneath the name's caption"
        },
        "description": {
            "type": "array",
            "desc": "An array of strings housing the team member's description"
        }
    },
    "type": "containerSimple",
    "prps": {
        "dir": "horizontal",
        "flex": true,
        "gap": "padding",
        "style": {
            ".cpnContainerSimple": {
                "@media only screen and (max-width: 700px)": {
                    "gap": "var(--global-mediumPadding) !important"
                }
            }
        }
    },
    "wgts": [
        {
            "type": "image",
            "prps": {
                "value": "%imageUrl%",
                "imageWidth": "186px",
                "imageHeight": "232px",
                "style": {
                    ".cpnImage img": {
                        "object-fit": "cover",
                        "@media only screen and (max-width: 700px)": {
                            "width": "93px",
                            "height": "116px"
                        }
                    }
                }
            }
        },
        {
            "type": "containerSimple",
            "prps": {
                "flex": true,
                "height": "232px",
                "style": {
                    ".cpnContainerSimple": {
                        "@media only screen and (max-width: 700px)": {
                            "height": "auto !important"
                        }
                    }
                }
            },
            "wgts": [
                {
                    "type": "label",
                    "prps": {
                        "cpt": "%name%",
                        "color": "primaryOpusBlue",
                        "fontSize": "24px",
                        "style": {
                            ".cpnLabel": {
                                "@media only screen and (max-width: 700px)": {
                                    "font-size": "22px"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "label",
                    "prps": {
                        "cpt": "%jobTitle%",
                        "color": "footerText",
                        "fontSize": "18px",
                        "marginTop": "smallPadding",
                        "style": {
                            ".cpnLabel": {
                                "@media only screen and (max-width: 700px)": {
                                    "font-size": "14px"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "markdownLabel",
                    "prps": {
                        "cpt": "%description%",
                        "color": "footerText",
                        "fontSize": "18px",
                        "marginTop": "smallPadding",
                        "lineHeight": "30px",
                        "overflowY": "auto",
                        "justify": "stretch",
                        "style": {
                            ".cpnMarkdownLabel": {
                                "p": {
                                    "font-size": "18px !important",
                                    "line-height": "30px",
                                    "color": "var(--colors-footerText)",
                                    "margin": "1rem 0px",
                                    "strong": {
                                        "font-size": "18px"
                                    }
                                },
                                "@media only screen and (max-width: 700px)": {
                                    "p": {
                                        "font-size": "14px"
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "divider",
                    "prps": {
                        "color": "primaryOpusBlue",
                        "thickness": "1px",
                        "marginTop": "auto"
                    }
                }
            ]
        }
    ]
}