{
    "acceptPrps": {
        "value": {
            "type": "string"
        },
        "flows": {
            "type": "string"
        }
    },
    "type": "containerSimple",
    "prps": {
        "dir": "horizontal",
        "crossAxisAlign": "center",
        "gap": "16px"
    },
    "wgts": [
        {
            "type": "image",
            "prps": {
                "value": "{theme.system.mdaLocation}/images/note.svg",
                "imageWidth": "auto",
                "imageHeight": "42px"
            }
        },
        {
            "type": "markdownLabel",
            "prps": {
                "cpt": "%value%",
                "assignIdsToHeadingTypes": [
                    "h1"
                ],
                "flows": "$flows$",
                "style": {
                    ".cpnMarkdownLabel": {
                        "font-size": "42px",
                        "font-weight": "700",
                        "color": "var(--colors-footerText)",
                        "@media only screen and (max-width: 700px)": {
                            "h1": {
                                "font-size": "28px !important"
                            }
                        }
                    }
                }
            }
        }
    ]
}