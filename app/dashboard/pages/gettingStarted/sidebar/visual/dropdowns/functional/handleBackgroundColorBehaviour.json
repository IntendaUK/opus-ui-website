{
    "acceptPrps": {
        "rowData": {
            "type": "object",
            "desc": "used to flow data from staticData in index file"
        }
    },
    "prps": {
        "scps": [
            {
                "triggers": [
                    {
                        "event": "onMount"
                    },
                    {
                        "event": "onStateChange",
                        "source": "||gettingStarted||",
                        "key": "selectedLessonId"
                    }
                ],
                "actions": [
                    {
                        "type": "applyComparison",
                        "operator": "isEqual",
                        "compareValue": "{{state.||gettingStarted||.selectedLessonId}}",
                        "value": "$rowData.dataFile$",
                        "branch": {
                            "true": [
                                {
                                    "type": "setState",
                                    "key": "backgroundColor",
                                    "value": "primarySearch"
                                }
                            ],
                            "false": [
                                {
                                    "type": "setState",
                                    "key": "backgroundColor",
                                    "value": "transparent"
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}